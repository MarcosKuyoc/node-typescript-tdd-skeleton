{
  "version": 2,
  "name": "node-typescript-tdd-skeleton",
  "public": true,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/robots.txt",
      "status": 204
    },
    {
      "src": "/favicon.ico",
      "status": 204
    },
    {
      "src": "/api-docs",
      "dest": "/src/api-docs/index.html"
    },
    {
      "src": "/dist/(.*)",
      "dest": "/dist/$1",
      "headers": {
        "Cache-Control": "max-age=31536000"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/src/index.ts",
      "headers": {
        "Cache-Control": "max-age=0"
      }
    }
  ]
}
